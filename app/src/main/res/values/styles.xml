<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/col_theme_0092</item>
        <item name="colorPrimaryDark">@color/col_theme_0092</item>
        <item name="colorAccent">@color/col_theme_0092</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarSize">46dp</item>
        <item name="android:textColor">@color/sd_text_black_33</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="AppMain" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Customize your theme here. -->
    <style name="AppTheme" parent="BaseAppTheme">

    </style>

</resources>
